<?xml version="1.0" ?>
<job-manifest enable="False">

    <outpath value="{OutputDir}"/>

    <execute command='python "{CWD}/Scripts/simpleRender.py"' stage="stage1" timeout="10000">
        <argument>--stage_report stage1.json</argument>
        <argument>--tool "{Tool}"</argument>
        <argument>--tests "{CWD}/Tests/AOV/{TestsFilter}TestsList.txt"</argument>
        <argument>--render_device "{RenderDevice}"</argument>
        <argument>--output "{OutputDir}"</argument>
        <argument>--testType AOV</argument>
    	<argument>--template "{CWD}/Scripts/Templates/template_aov.mel"</argument>
    	<argument>--pass_limit {PassLimit}</argument>
    	<argument>--resolution_x {rx}</argument>
    	<argument>--resolution_y {ry}</argument>
    	<argument>--res_path "{ScenesDir}"</argument>
    	<argument>--testCases "{TestCases}"</argument>
    </execute>

    <execute command='python "{CWD}/Scripts/make_report_json.py"' stage="stage2">
        <argument>--stage_report stage2.json</argument>
        <argument>--work_dir "{OutputDir}"</argument>
    </execute>

    <execute command='python "{CommonDir}/scripts/ImageComparator/compareByJSON.py"' stage="stage3">
        <argument>--work_dir "{OutputDir}"</argument>
        <argument>--base_dir "{BaselineDir}"</argument>
    </execute>

    <execute command='python "{CommonDir}/scripts/HtmlTemplate/htmlBuilder.py"' stage="stage4">
        <argument>--work_dir "{OutputDir}"</argument>
    </execute>

</job-manifest>
